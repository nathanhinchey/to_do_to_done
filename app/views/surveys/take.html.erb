<h1>Answer Survey</h1>
<h2><%=@survey.title %></h2>
<h3><%=@survey.date %></h2>
<form url="<%= survey_save_answers_path %>" method="POST">
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <% @survey.survey_questions.each do |sq| %>
    <%= render partial: 'question_answer', locals: { question: sq.question } %>
  <% end %>
  <input type="submit" value="Save Answers">
</form>
